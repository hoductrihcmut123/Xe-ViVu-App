<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded_bottom_sheet"
    android:orientation="vertical"
    android:padding="@dimen/_15sdp"
    app:behavior_hideable="true"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:src="@drawable/short_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/personalInfoLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="@dimen/_75sdp"
                android:layout_height="@dimen/_75sdp"
                android:layout_marginStart="@dimen/_25sdp"
                android:src="@drawable/avatar_sample" />

            <TextView
                android:id="@+id/tvDriverName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:gravity="center"
                android:text="@string/SampleName"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_20ssp"
                android:layout_marginVertical="@dimen/_5sdp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_5sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_40sdp"
                    android:fontFamily="@font/inter_medium"
                    android:text="4.5"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_16ssp" />

                <ImageView
                    android:id="@+id/ivStar"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:src="@drawable/star_icon" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/edittext_background"
                app:cardCornerRadius="@dimen/_20sdp">

                <TextView
                    android:id="@+id/tvLicensePlate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semibold"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:text="59KA-67391"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_17ssp" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvVehicleType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:text="Honda Air Blade"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_16ssp"
                android:layout_marginTop="@dimen/_12sdp"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ratingButton"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginVertical="@dimen/_12sdp"
            android:background="@drawable/button_border"
            android:backgroundTint="@color/button_background"
            android:fontFamily="@font/inter_semibold"
            android:foreground="?attr/selectableItemBackground"
            android:padding="@dimen/_16sdp"
            android:stateListAnimator="@null"
            android:text="@string/Rating"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_20ssp" />

        <Button
            android:id="@+id/reportButton"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginVertical="@dimen/_12sdp"
            android:background="@drawable/button_with_border"
            android:fontFamily="@font/inter_semibold"
            android:foreground="?attr/selectableItemBackground"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_16sdp"
            android:stateListAnimator="@null"
            android:text="@string/DriverReport"
            android:textAllCaps="false"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_20ssp" />

    </LinearLayout>
</LinearLayout>
