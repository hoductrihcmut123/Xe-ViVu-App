<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_receipt_bottom_sheet"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_675sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/receipt_inner_background"
        android:elevation="@dimen/_25sdp"
        android:orientation="vertical"
        android:padding="@dimen/_38sdp">

        <ImageView
            android:layout_width="@dimen/_95sdp"
            android:layout_height="@dimen/_95sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/complete_trip_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_60sdp"
            android:layout_marginVertical="@dimen/_15sdp"
            android:fontFamily="@font/inter_semibold"
            android:gravity="center"
            android:text="@string/ReceiptTitle"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_22ssp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_20sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTimeBookingReceipt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:fontFamily="@font/inter_medium"
                        android:text="11:24"
                        android:textColor="@color/sub_content"
                        android:textSize="@dimen/_16ssp" />

                    <TextView
                        android:id="@+id/tvTimeCompleteReceipt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_60sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:fontFamily="@font/inter_medium"
                        android:text="12:45"
                        android:textColor="@color/sub_content"
                        android:textSize="@dimen/_16ssp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_marginBottom="@dimen/_40sdp"
                    android:src="@drawable/route" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="@dimen/_21sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvOriginAddressReceipt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/inter_medium"
                        android:text="Số 22, Đ. Hàm Nghi, Quận 1, TP. Hồ Chí Minh, Việt Nam"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_17ssp" />

                    <TextView
                        android:id="@+id/tvDestinationAddressReceipt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/inter_medium"
                        android:gravity="bottom"
                        android:text="Số 1, Đ. Hồ Thị Kỷ, Quận 10, TP. Hồ Chí Minh, Việt Nam"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_17ssp" />

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_marginVertical="@dimen/_15sdp"
            android:backgroundTint="@color/edittext_background"
            app:cardCornerRadius="@dimen/_20sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:paddingTop="@dimen/_6sdp"
                    android:src="@drawable/cash" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_2sdp"
                    android:fontFamily="@font/inter_medium"
                    android:text="/"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_16ssp" />

                <ImageView
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:paddingVertical="@dimen/_10sdp"
                    android:src="@drawable/momo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:text=":"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_16ssp" />

                <TextView
                    android:id="@+id/tvPaymentTypeReceipt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:fontFamily="@font/inter_medium"
                    android:text="@string/Cash"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_16ssp" />

                <TextView
                    android:id="@+id/tvPriceReceipt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="end"
                    android:paddingEnd="@dimen/_8sdp"
                    android:text="113.000 VND"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_18ssp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvBookingTimeReceipt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:fontFamily="@font/inter_medium"
            android:text="10/11/2024  11:38 AM"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_17ssp" />

        <TextView
            android:id="@+id/tvTravelDistanceReceipt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:fontFamily="@font/inter_medium"
            android:text="@string/TravelDistance"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_17ssp" />

        <TextView
            android:id="@+id/TvExactTimeReceipt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:fontFamily="@font/inter_medium"
            android:text="@string/ReceiptTime"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_17ssp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ratingButtonReceipt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/button_border"
            android:backgroundTint="@color/button_background"
            android:fontFamily="@font/inter_semibold"
            android:foreground="?attr/selectableItemBackground"
            android:padding="@dimen/_16sdp"
            android:stateListAnimator="@null"
            android:text="@string/Rating"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_20ssp"
            android:layout_weight="1"
            android:visibility="visible"/>

        <Button
            android:id="@+id/reportButtonReceipt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@drawable/button_with_border"
            android:fontFamily="@font/inter_semibold"
            android:foreground="?attr/selectableItemBackground"
            android:paddingHorizontal="@dimen/_16sdp"
            android:paddingVertical="@dimen/_16sdp"
            android:stateListAnimator="@null"
            android:text="@string/DriverReport"
            android:textAllCaps="false"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_20ssp"
            android:layout_weight="1"
            android:visibility="visible"/>

    </LinearLayout>

    <Button
        android:id="@+id/completeReceiptButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/button_border"
        android:backgroundTint="@color/button_background"
        android:fontFamily="@font/inter_semibold"
        android:padding="@dimen/_16sdp"
        android:stateListAnimator="@null"
        android:text="@string/Complete"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_22ssp"
        android:foreground="?attr/selectableItemBackground"/>

</LinearLayout>
