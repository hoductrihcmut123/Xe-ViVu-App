<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.menu.trip_history.TripDetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:backgroundTint="@color/white"
            app:borderWidth="0dp"
            app:elevation="@dimen/_10sdp"
            app:fabCustomSize="@dimen/_42sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back_icon"
            tools:ignore="SpeakableTextPresentCheck"
            android:visibility="visible" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:ellipsize="end"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:maxLines="1"
            android:paddingHorizontal="@dimen/_75sdp"
            android:paddingTop="@dimen/_12sdp"
            android:paddingBottom="@dimen/_6sdp"
            android:text="@string/TripDetail"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_23ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_26sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_20sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTimeStartDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:fontFamily="@font/inter_medium"
                        android:text="11:24"
                        android:textColor="@color/sub_content"
                        android:textSize="@dimen/_16ssp" />

                    <TextView
                        android:id="@+id/tvTimeEndDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_60sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:fontFamily="@font/inter_medium"
                        android:text="12:45"
                        android:textColor="@color/sub_content"
                        android:textSize="@dimen/_16ssp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_marginBottom="@dimen/_40sdp"
                    android:src="@drawable/route" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="@dimen/_21sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvOriginAddressDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/inter_medium"
                        android:text="Số 22, Đ. Hàm Nghi, Quận 1, TP. Hồ Chí Minh, Việt Nam"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_17ssp" />

                    <TextView
                        android:id="@+id/tvDestinationAddressDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/inter_medium"
                        android:gravity="bottom"
                        android:text="Số 1, Đ. Hồ Thị Kỷ, Quận 10, TP. Hồ Chí Minh, Việt Nam"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_17ssp" />

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvStatusDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/StatusDetail"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_18ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardView" />

        <TextView
            android:id="@+id/tvStatusDetailValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/StatusDriverCancel"
            android:textColor="@color/refuse_background"
            android:textSize="@dimen/_18ssp"
            app:layout_constraintStart_toEndOf="@id/tvStatusDetail"
            app:layout_constraintTop_toBottomOf="@id/cardView" />

        <TextView
            android:id="@+id/tvBookingTimeDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:fontFamily="@font/inter_medium"
            android:text="10/11/2024  11:38 AM"
            android:textColor="@color/sub_content"
            android:textSize="@dimen/_16ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvStatusDetail" />

        <TextView
            android:id="@+id/tvTravelDistanceDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_1sdp"
            android:fontFamily="@font/inter_medium"
            android:text="@string/TravelDistance"
            android:textColor="@color/sub_content"
            android:textSize="@dimen/_16ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvBookingTimeDetail" />

        <TextView
            android:id="@+id/TvEstimateTimeDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_1sdp"
            android:fontFamily="@font/inter_medium"
            android:text="@string/EstimatedTime"
            android:textColor="@color/sub_content"
            android:textSize="@dimen/_16ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTravelDistanceDetail" />

        <TextView
            android:id="@+id/TvRedStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_45sdp"
            android:fontFamily="@font/inter_semibold"
            android:text="*"
            android:textColor="@color/refuse_background"
            android:textSize="@dimen/_17ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/TvEstimateTimeDetail" />

        <TextView
            android:id="@+id/TvExactTimeDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_1sdp"
            android:fontFamily="@font/inter_medium"
            android:text="@string/ExactTimeDetail"
            android:textColor="@color/sub_content"
            android:textSize="@dimen/_16ssp"
            app:layout_constraintStart_toEndOf="@id/TvRedStar"
            app:layout_constraintTop_toBottomOf="@id/TvEstimateTimeDetail" />

        <TextView
            android:id="@+id/tvPassengerVote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_18sdp"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/PassengerVote"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_19ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/TvExactTimeDetail" />

        <TextView
            android:id="@+id/tvStarValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:fontFamily="@font/inter"
            android:text="__"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_18ssp"
            app:layout_constraintEnd_toStartOf="@id/starIcon"
            app:layout_constraintTop_toBottomOf="@id/TvExactTimeDetail" />

        <ImageView
            android:id="@+id/starIcon"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_35sdp"
            android:src="@drawable/star_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/TvExactTimeDetail" />

        <ScrollView
            android:id="@+id/layoutFeedback"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_215sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvPassengerVote">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_25sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layoutComment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/tvComment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_semibold"
                        android:text="@string/Detail"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_16ssp" />

                    <TextView
                        android:id="@+id/tvCommentValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:fontFamily="@font/inter_medium"
                        android:text="Tài xế chạy nhanh với kỹ năng rất tốt. Good"
                        android:textColor="@color/sub_content"
                        android:textSize="@dimen/_15ssp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutReport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/refuse_background"
                        app:cardCornerRadius="@dimen/_20sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_medium"
                            android:paddingHorizontal="@dimen/_15sdp"
                            android:paddingVertical="@dimen/_2sdp"
                            android:text="@string/Report"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_16ssp" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tvReportValue"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_9sdp"
                        android:fontFamily="@font/inter_medium"
                        android:gravity="center_vertical"
                        android:text="Lý do khác"
                        android:textColor="@color/sub_content"
                        android:textSize="@dimen/_15ssp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutReportDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/refuse_background"
                        app:cardCornerRadius="@dimen/_20sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_medium"
                            android:paddingHorizontal="@dimen/_15sdp"
                            android:paddingVertical="@dimen/_2sdp"
                            android:text="@string/ReportContent"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_16ssp" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tvReportDetailValue"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:fontFamily="@font/inter_medium"
                        android:gravity="center_vertical"
                        android:text="Tài xế chạy lạng lách"
                        android:textColor="@color/sub_content"
                        android:textSize="@dimen/_15ssp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@color/hintText" />

                <LinearLayout
                    android:id="@+id/layoutDriverCancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/tvDriverCancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_semibold"
                        android:text="@string/DriverCancelReason"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_16ssp" />

                    <TextView
                        android:id="@+id/tvDriverCancelValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:fontFamily="@font/inter_medium"
                        android:text="Tài xế chạy nhanh với kỹ năng rất tốt. Good"
                        android:textColor="@color/sub_content"
                        android:textSize="@dimen/_15ssp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutPassengerCancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/tvPassengerCancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_semibold"
                        android:text="@string/PassengerCancelReason"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_16ssp" />

                    <TextView
                        android:id="@+id/tvPassengerCancelValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:fontFamily="@font/inter_medium"
                        android:text="Tài xế chạy nhanh với kỹ năng rất tốt. Good"
                        android:textColor="@color/sub_content"
                        android:textSize="@dimen/_15ssp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutDriverCancelEmergency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/tvDriverCancelEmergency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_semibold"
                        android:text="@string/DriverCancelEmergencyReason"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_16ssp" />

                    <TextView
                        android:id="@+id/tvDriverCancelEmergencyValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:fontFamily="@font/inter_medium"
                        android:text="Tài xế chạy nhanh với kỹ năng rất tốt. Good"
                        android:textColor="@color/sub_content"
                        android:textSize="@dimen/_15ssp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutDriverCancelEmergencyDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/tvDriverCancelEmergencyDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_semibold"
                        android:text="@string/Detail"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_16ssp" />

                    <TextView
                        android:id="@+id/tvDriverCancelEmergencyDetailValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:fontFamily="@font/inter_medium"
                        android:text="Tài xế chạy nhanh với kỹ năng rất tốt. Good"
                        android:textColor="@color/sub_content"
                        android:textSize="@dimen/_15ssp" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:backgroundTint="@color/edittext_background"
            app:cardCornerRadius="@dimen/_20sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutFeedback">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:paddingTop="@dimen/_6sdp"
                    android:src="@drawable/cash" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_2sdp"
                    android:fontFamily="@font/inter_medium"
                    android:text="/"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_16ssp" />

                <ImageView
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:paddingVertical="@dimen/_10sdp"
                    android:src="@drawable/momo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:text=":"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_16ssp" />

                <TextView
                    android:id="@+id/tvPaymentType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:fontFamily="@font/inter_medium"
                    android:text="@string/Cash"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_16ssp" />

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="end"
                    android:paddingEnd="@dimen/_8sdp"
                    android:text="113.000 VND"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_18ssp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/bottomView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:background="@color/edittext_background"
            android:elevation="@dimen/_20sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/reportIssueButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_25sdp"
            android:background="@drawable/button_border"
            android:backgroundTint="@color/button_background"
            android:elevation="@dimen/_35sdp"
            android:fontFamily="@font/inter_semibold"
            android:foreground="?attr/selectableItemBackground"
            android:padding="@dimen/_12sdp"
            android:stateListAnimator="@null"
            android:text="@string/ReportIssue"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_22ssp"
            app:layout_constraintBottom_toBottomOf="@id/bottomView"
            app:layout_constraintEnd_toEndOf="@id/bottomView"
            app:layout_constraintStart_toStartOf="@id/bottomView"
            app:layout_constraintTop_toTopOf="@id/bottomView"
            android:visibility="visible"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/bottomSheetReportIssue"
        layout="@layout/report_issue_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        tools:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>