<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.menu.support.FAQActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:backgroundTint="@color/white"
        app:borderWidth="0dp"
        app:elevation="@dimen/_10sdp"
        app:fabCustomSize="@dimen/_42sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_icon"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:ellipsize="end"
        android:fontFamily="@font/inter_bold"
        android:gravity="center"
        android:maxLines="1"
        android:paddingHorizontal="@dimen/_75sdp"
        android:paddingTop="@dimen/_12sdp"
        android:paddingBottom="@dimen/_6sdp"
        android:text="FAQ's"
        android:textColor="@color/text_color"
        android:textSize="@dimen/_23ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_22sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:text="@string/Account"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_19ssp"
            android:layout_marginTop="@dimen/_35sdp"
            android:layout_marginBottom="@dimen/_25sdp"/>

        <LinearLayout
            android:id="@+id/llAccountItem1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAccountItem1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:text="@string/AccountItem1"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/_17ssp"
                android:layout_gravity="center"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/choose_icon" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginVertical="@dimen/_12sdp"
            android:background="@color/hintText" />

        <LinearLayout
            android:id="@+id/llAccountItem2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAccountItem2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:text="@string/AccountItem2"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/_17ssp"
                android:layout_gravity="center"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/choose_icon" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginVertical="@dimen/_12sdp"
            android:background="@color/hintText" />

        <LinearLayout
            android:id="@+id/llAccountItem3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAccountItem3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:text="@string/AccountItem3"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/_17ssp"
                android:layout_gravity="center"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/choose_icon" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginVertical="@dimen/_12sdp"
            android:background="@color/hintText" />

        <TextView
            android:id="@+id/tvPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:text="@string/Payment"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_19ssp"
            android:layout_marginTop="@dimen/_45sdp"
            android:layout_marginBottom="@dimen/_25sdp"/>

        <LinearLayout
            android:id="@+id/llPaymentItem1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPaymentItem1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:text="@string/PaymentItem1"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/_17ssp"
                android:layout_gravity="center"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/choose_icon" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginVertical="@dimen/_12sdp"
            android:background="@color/hintText" />

        <LinearLayout
            android:id="@+id/llPaymentItem2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPaymentItem2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:text="@string/PaymentItem2"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/_17ssp"
                android:layout_gravity="center"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/choose_icon" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginVertical="@dimen/_12sdp"
            android:background="@color/hintText" />

        <LinearLayout
            android:id="@+id/llPaymentItem3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPaymentItem3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:text="@string/PaymentItem3"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/_17ssp"
                android:layout_gravity="center"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/choose_icon" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginVertical="@dimen/_12sdp"
            android:background="@color/hintText" />

        <LinearLayout
            android:id="@+id/llPaymentItem4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPaymentItem4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:text="@string/PaymentItem4"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/_17ssp"
                android:layout_gravity="center"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/choose_icon" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginVertical="@dimen/_12sdp"
            android:background="@color/hintText" />

        <LinearLayout
            android:id="@+id/llPaymentItem5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPaymentItem5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:text="@string/PaymentItem5"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/_17ssp"
                android:layout_gravity="center"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/choose_icon" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginVertical="@dimen/_12sdp"
            android:background="@color/hintText" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>