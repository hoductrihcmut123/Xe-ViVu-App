<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/_16sdp"
    tools:context=".signup_login.forgot_password.ForgotPasswordActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:backgroundTint="@color/white"
        app:borderWidth="0dp"
        app:elevation="@dimen/_10sdp"
        app:fabCustomSize="@dimen/_40sdp"
        app:layout_constraintEnd_toStartOf="@id/fpTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_icon"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/fpTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter"
        android:textFontWeight="700"
        android:gravity="center"
        android:text="@string/RecoverPassword"
        android:textColor="@color/text_color"
        android:textSize="@dimen/_26ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_75sdp"
        android:layout_marginEnd="@dimen/_75sdp"/>

    <TextView
        android:id="@+id/guideContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter"
        android:textFontWeight="400"
        android:text="@string/SendOTPToPhone"
        android:gravity="center"
        android:textColor="@color/sub_content"
        android:textSize="@dimen/_18ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fpTitle"
        app:layout_constraintBottom_toTopOf="@id/titlePhoneNumber"
        android:layout_marginTop="@dimen/_130sdp"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_25sdp" />

    <TextView
        android:id="@+id/titlePhoneNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter"
        android:textFontWeight="700"
        android:text="@string/PhoneNum"
        android:textColor="@color/text_color"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideContent"
        app:layout_constraintBottom_toTopOf="@id/fpPhoneNumber"
        android:layout_marginTop="@dimen/_75sdp"
        android:layout_marginStart="@dimen/_25sdp" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint=" Phone Number"
        android:textColorHint="@color/edittext_background"
        android:id="@+id/fpPhoneNumber"
        android:inputType="phone"
        android:textColor="@color/text_color"
        android:padding="@dimen/_12sdp"
        android:background="@drawable/edittext_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titlePhoneNumber"
        app:layout_constraintBottom_toTopOf="@id/fpButton"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_25sdp" />

    <Button
        android:id="@+id/fpButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_130sdp"
        android:layout_marginEnd="@dimen/_25sdp"
        android:background="@drawable/button_border"
        android:backgroundTint="@color/button_background"
        android:fontFamily="@font/inter"
        android:padding="@dimen/_16sdp"
        android:stateListAnimator="@null"
        android:text="@string/Continue"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textFontWeight="700"
        android:textSize="@dimen/_22ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fpPhoneNumber" />

    <TextView
        android:id="@+id/fpSubContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter"
        app:layout_constraintHorizontal_weight="1"
        android:textFontWeight="400"
        android:text="@string/NotHaveAccount"
        android:gravity="end|center"
        android:textColor="@color/sub_content"
        android:textSize="@dimen/_18ssp"
        app:layout_constraintEnd_toStartOf="@id/fpNavSignup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fpButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_10sdp" />

    <TextView
        android:id="@+id/fpNavSignup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter"
        app:layout_constraintHorizontal_weight="0.5"
        android:textFontWeight="400"
        android:text="@string/SignUp"
        android:gravity="start"
        android:textColor="@color/button_background"
        android:textSize="@dimen/_18ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/fpSubContent"
        app:layout_constraintTop_toBottomOf="@id/fpButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="@dimen/_25sdp" />

</androidx.constraintlayout.widget.ConstraintLayout>